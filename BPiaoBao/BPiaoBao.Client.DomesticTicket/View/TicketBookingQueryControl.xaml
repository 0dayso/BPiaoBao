    mc:Ignorable="d"                      xmlns:WPFSpark="clr-namespace:WPFSpark;assembly=WPFSpark"   
   x:Class="BPiaoBao.Client.DomesticTicket.View.TicketBookingQueryControl"   
	x:Name="Window"  d:DesignHeight="500" d:DesignWidth="1200"    
    d:DataContext="{d:DesignData /SampleData/FlightResponseSampleData.xaml}"
	 Background="White">

    <UserControl.Resources>
        <Converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:ShowPanelConverter x:Key="ShowPanelConverter"/>
        <converters:ShowStatusConverter x:Key="ShowStatusConverter"/>
        <converters:ShowGridHeaderTextConverter x:Key="ShowGridHeaderTextConverter"/>
        <converters:AirlineLogoConverter x:Key="AirlineLogoConverter"/>
        <converters:ShowToggleButtonTextConverter x:Key="ShowToggleButtonTextConverter"/>
        <converters:ShowButtonByFlightTypeConverter x:Key="ShowButtonByFlightTypeConverter"/>
        <converters:EnableByFlightTypeConverter x:Key="EnableByFlightTypeConverter"/>
        <converters:SpecialBooleanToVisibilityConverter x:Key="SpecialBooleanToVisibilityConverter" />
        <converters:NotBooleanToVisibilityConverter x:Key="NotBooleanToVisibilityConverter" />
        <converters:NotBooleanConverter x:Key="NotBooleanConverter" />
        <converters:DecimalConverter x:Key="DecimalConverter"/>
        <ViewModel:ViewModelLocator x:Key="TicketVMLocatorDataSource" d:IsDataSource="True"/>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ColumnHeaderGripperStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="{x:Static DataGrid.FocusBorderBrushKey}" Color="#FF000000"/>
        <DataTemplate x:Key="timeDataTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <!--Past View<ColumnDefinition Width="*"></ColumnDefinition>-->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Stretch" Width="Auto" Orientation="Horizontal" >
                    <!--<Image Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center" Source="../Image/te_r.png" Visibility="{Binding IsHaveSpecial,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"/>-->
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Width="Auto" Orientation="Horizontal" Grid.Row="1">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding StartDateTime, StringFormat=HH:mm}" Width="Auto" FontSize="19" Foreground="#FF666666"/>
                    <Image Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center" Source="../Image/arrow_g.png" Margin="5,0,5,0"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ToDateTime, StringFormat=HH:mm}" Width="Auto" FontSize="19" Foreground="#FF666666"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Width="Auto" Orientation="Horizontal" Grid.Row="2">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FromAirPortrName}" Width="Auto" Margin="5,0"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FromTerminal}" Width="Auto" Margin="0,0,10,0"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ToAirPortrName}" Width="Auto" Height="15.24" Margin="5,0"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ToTerminal}" Width="Auto" Height="15.24" Margin="0,0,10,0"/>
                </StackPanel>
                <!--Past View<StackPanel HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto" Orientation="Horizontal" Margin="0,0,0,2">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding StartDateTime, StringFormat=HH:mm}" Width="Auto"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FromAirPortrName}" Width="Auto" Margin="5,0"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FromTerminal}" Width="Auto" Margin="0,0,10,0"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto" Orientation="Horizontal" Grid.Row="1">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ToDateTime, StringFormat=HH:mm}" Width="Auto" Height="15.24" Foreground="#FF666666"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ToAirPortrName}" Width="Auto" Height="15.24" Foreground="#FF666666" Margin="5,0"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ToTerminal}" Width="Auto" Height="15.24" Foreground="#FF666666" Margin="0,0,10,0"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto" Orientation="Horizontal" Grid.RowSpan="2" Grid.Column="1">
                    <Image Stretch="Fill" Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Source="../Image/special_h.png" Visibility="{Binding IsHaveSpecial,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"/>
                </StackPanel>-->
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="seatDataTemplate">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" d:DesignWidth="421.475" d:DesignHeight="123" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.SeatCode}" Height="Auto"/>
                    <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.Discount, StringFormat=/\{0:N0\}折}" Foreground="#FF666666"/>
                    <TextBlock TextWrapping="Wrap" Text="/剩余"/>
                    <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.SeatCount}" Foreground="#FFFF4200" Margin="1,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="TicketPriceTemplate">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" d:DesignWidth="421.475" d:DesignHeight="123" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock x:Name="ticketPrice" TextWrapping="Wrap" Text="{Binding DefaultSite.TicketPrice, StringFormat=￥\{0:f2\},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="#FFFF4200" FontSize="20"
                               Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NotBooleanToVisibilityConverter}}"/>
                    <TextBlock TextWrapping="Wrap" Text="--" Foreground="#FFFF4200" FontSize="18"
                               Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"/>
                    <!--<Button Content="获取价格" BorderThickness="0" Padding="1" Width="72" Height="24" Background="#65b3f5" Foreground="White" 
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}" 
                            Command="{Binding DataContext.GetSpecialFromModelCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding ., Mode=OneWay}">
                    </Button>-->
                    <Button Content="无运价" BorderThickness="0" Padding="1" Width="72" Height="24" Background="#bcbcbc" Foreground="White" IsEnabled="False" 
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter},ConverterParameter=0}" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="TicketPriceTemplatePop">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" d:DesignWidth="421.475" d:DesignHeight="123" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock x:Name="ticketPrice" TextWrapping="Wrap" Text="{Binding TicketPrice, StringFormat=￥\{0:f2\},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="#FFFF4200" FontSize="20"
                               Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NotBooleanToVisibilityConverter}}"/>
                    <TextBlock TextWrapping="Wrap" Text="--" Foreground="#FFFF4200" FontSize="18"
                               Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"/>
                    <!--<Button Content="获取价格" BorderThickness="0" Padding="1" Width="72" Height="24" Background="#65b3f5" Foreground="White" 
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}" 
                            Command="{Binding DataContext.GetSpecialFromSiteCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding ., Mode=OneWay}">
                    </Button>-->
                    <Button Content="无运价" BorderThickness="0" Padding="1" Width="72" Height="24" Background="#bcbcbc" Foreground="White" IsEnabled="False" 
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter},ConverterParameter=0}" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="seatPriceTemplate">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" d:DesignWidth="421.475" d:DesignHeight="123" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.SeatCode}" Height="Auto"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.Discount, StringFormat=/\{0:N0\}折,Converter={StaticResource DecimalConverter}}" Foreground="#FF666666"/>
                        <TextBlock TextWrapping="Wrap" Text="/剩余"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.SeatCount}" Foreground="#FFFF4200" Margin="1,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1">
                        <TextBlock x:Name="seatPrice" TextWrapping="Wrap" Text="{Binding DefaultSite.SeatPrice, StringFormat=￥\{0:f2\},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="#FFFF4200" FontSize="16" Margin="0,0,5,0"
                               Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NotBooleanToVisibilityConverter}}" VerticalAlignment="Center"/>
                        <Button x:Name="getSpecialBtn" Content="获取价格" BorderThickness="0" Padding="1" Width="72" Height="24" Background="#65b3f5" Foreground="White" Margin="0,0,5,0" VerticalAlignment="Center"
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}" 
                            Command="{Binding DataContext.GetSpecialFromModelCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding ., Mode=OneWay}"
                                IsEnabled="{Binding FlightType,Converter={StaticResource EnableByFlightTypeConverter}}">
                        </Button>
                        <Button Content="无运价" BorderThickness="0" Padding="1" Width="72" Height="24" Background="#bcbcbc" Foreground="White" IsEnabled="False"  Margin="0,0,5,0" VerticalAlignment="Center"
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter},ConverterParameter=0}" />
                        <Image Stretch="Fill" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Left" Source="../Image/tejia_r.png"  Visibility="{Binding DefaultSite.PolicySpecialType,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>

                <!--以前的View<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock x:Name="seatPrice" TextWrapping="Wrap" Text="{Binding DefaultSite.SeatPrice, StringFormat=￥\{0:f2\},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="#FFFF4200"
                               Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NotBooleanToVisibilityConverter}}"/>
                    <Button x:Name="getSpecialBtn" Content="获取价格" BorderThickness="0" Padding="1" Width="60" Background="#FFF06F34" Foreground="White" 
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}" 
                            Command="{Binding DataContext.GetSpecialFromModelCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding ., Mode=OneWay}">
                    </Button>
                    <Button Content="无运价" BorderThickness="0" Padding="1" Width="60" Background="#FFF06F34" Foreground="White" IsEnabled="False" 
                            Visibility="{Binding Path=.,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter},ConverterParameter=0}" />
                    <TextBlock TextWrapping="Wrap" Text="[特价]" Foreground="Red" Visibility="{Binding DefaultSite.PolicySpecialType,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"
                               ></TextBlock>
                </StackPanel>-->
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="seatPriceTemplatePop">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" d:DesignWidth="421.475" d:DesignHeight="132" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock x:Name="popSeatPrice" TextWrapping="Wrap" Text="{Binding SeatPrice, StringFormat=￥\{0:f2\}}" Foreground="#FFFF4200" FontSize="16"  Margin="0,0,5,0"
                               Visibility="{Binding .,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NotBooleanToVisibilityConverter}}" VerticalAlignment="Center"/>
                    <Button x:Name="popGetSpecialBtn" Content="获取价格" BorderThickness="0" Padding="1" Width="60" Background="#FFF06F34" Foreground="White" Margin="0,0,5,0"
                            Command="{Binding DataContext.GetSpecialFromSiteCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding ., Mode=OneWay}"
                            Visibility="{Binding .,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter}}" VerticalAlignment="Center"
                            IsEnabled="{Binding FlightType,Converter={StaticResource EnableByFlightTypeConverter}}">
                    </Button>
                    <Button Content="无运价" BorderThickness="0" Padding="1" Width="60" Background="#FFF06F34" Foreground="White" IsEnabled="False"  Margin="0,0,5,0"
                            Visibility="{Binding .,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource SpecialBooleanToVisibilityConverter},ConverterParameter=0}" VerticalAlignment="Center"/>
                    <Image Stretch="Fill"  VerticalAlignment="Top" HorizontalAlignment="Left" Source="../Image/tejia_r.png" Visibility="{Binding PolicySpecialType,Converter={StaticResource SpecialBooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="CommissionDataTemplate">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="{Binding DataContext.IsShowCommissionColumn,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}, Converter={StaticResource ShowStatusConverter}}">

                    <TextBlock TextWrapping="Wrap" Text="{Binding DefaultSite.Commission,StringFormat=￥\{0:f0\}}" Foreground="#FF666666"/>

                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="CommissionDataTemplatePop">
            <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="{Binding DataContext.IsShowCommissionColumn,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}">

                    <TextBlock TextWrapping="Wrap" Text="{Binding Commission,StringFormat=￥\{0:f0\}}" Foreground="#FF666666"/>

                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="seatDataTemplatePop">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap" Text="{Binding SeatCode}" Height="Auto"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Discount, StringFormat=/\{0:N0\}折,Converter={StaticResource DecimalConverter}}" Foreground="#FF666666"/>
                <TextBlock TextWrapping="Wrap" Text="/剩余"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding SeatCount}" Foreground="#FFFF4200" Margin="1,0"/>
            </StackPanel>

        </DataTemplate>
        <Style x:Key="{ComponentResourceKey ResourceId=DataGridSelectAllButtonStyle, TypeInTargetAssembly={x:Type DataGrid}}" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle x:Name="Border" Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" SnapsToDevicePixels="True"/>
                            <Polygon x:Name="Arrow" Fill="Black" HorizontalAlignment="Right" Margin="8,8,3,3" Opacity="0.15" Points="0,10 10,10 10,0" Stretch="Uniform" VerticalAlignment="Bottom"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Stroke" TargetName="Border" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Fill" TargetName="Border" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Visibility" TargetName="Arrow" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CannotScorllDataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderBrush" Value="#FF688CAF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="ContextMenu" Value="{StaticResource copyMenu}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGrid}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentControl x:Name="DG_ScrollViewer" Focusable="false">
                                <ContentControl.Template>
                                    <ControlTemplate TargetType="{x:Type ContentControl}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Button Command="{x:Static DataGrid.SelectAllCommand}" Focusable="false" Style="{DynamicResource {ComponentResourceKey ResourceId=DataGridSelectAllButtonStyle, TypeInTargetAssembly={x:Type DataGrid}}}" Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.All}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" Width="{Binding CellsPanelHorizontalOffset, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                            <DataGridColumnHeadersPresenter x:Name="PART_ColumnHeadersPresenter" Grid.Column="1" Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Column}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" Grid.ColumnSpan="2"/>
                                            <ContentPresenter x:Name="PART_ScrollContentPresenter" Grid.ColumnSpan="2" Grid.Row="1"/>
                                            <Grid Grid.Column="1" Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="{Binding NonFrozenColumnsViewportHorizontalOffset, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                            </Grid>
                                        </Grid>
                                    </ControlTemplate>
                                </ContentControl.Template>
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ContentControl>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource HorizontalDashedBrush}"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionUnit" Value="Cell"/>
            <Style.Triggers>
                <Trigger Property="IsGrouping" Value="true">
                    <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="operationDataTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <!--<ColumnDefinition Width="Auto"></ColumnDefinition>-->
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center"  Width="Auto">
                    <Button Content="预订机票"  BorderThickness="0" Padding="4" 
        			    HorizontalAlignment="Center"   
        			    VerticalAlignment="Center" 
        			    Width="100" Visibility="{Binding FlightType, ConverterParameter=1, Converter={StaticResource ShowButtonByFlightTypeConverter}, Mode=OneWay}" IsEnabled="{Binding Path=.,Converter={StaticResource NotBooleanConverter}}"
        			    Background="#FFF06F34" Foreground="White"  Command="{Binding DataContext.BookingCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding Mode=OneWay}"/>
                    <Button Content="查看返程"  BorderThickness="0" Padding="4" 
        			    HorizontalAlignment="Center"   
        			    VerticalAlignment="Center" 
        			    Width="100" Visibility="{Binding FlightType, ConverterParameter=2, Converter={StaticResource ShowButtonByFlightTypeConverter}, Mode=OneWay}"
        			    Background="#FFF06F34" Foreground="White"  Command="{Binding DataContext.QueryTicketBackCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding Mode=OneWay}"/>

                    <Button Content="查看联程"  BorderThickness="0" Padding="4" 
        			    HorizontalAlignment="Center"   
        			    VerticalAlignment="Center" 
        			    Width="100" Visibility="{Binding FlightType, ConverterParameter=3, Converter={StaticResource ShowButtonByFlightTypeConverter}, Mode=OneWay}"
        			    Background="#FFF06F34" Foreground="White"  Command="{Binding DataContext.QueryTicketBackCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:TicketBookingQueryControl}}}" CommandParameter="{Binding Mode=OneWay}"/>

                    <ComboBox  x:Name="xcombox" DataContext="{Binding Mode=OneWay}" Margin="2" HorizontalAlignment="Left" Tag="▼更多舱位" 
                               VerticalAlignment="Top" Width="100" Style="{DynamicResource ComboBoxStyle1}" FlowDirection="RightToLeft" Visibility="Visible">
                    </ComboBox>
                    <CheckBox x:Name="cbx"  Width="Auto" Click="ButtonShowHide_OnClick" Margin="2" VerticalAlignment="Bottom"  Visibility="Collapsed">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="{x:Type CheckBox}">
                                <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Left">
