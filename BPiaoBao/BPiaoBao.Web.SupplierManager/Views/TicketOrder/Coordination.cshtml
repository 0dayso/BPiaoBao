<link href="/Content/css/ticket.css" rel="stylesheet" type="text/css"/>
<div class="easyui-dialog" id="coordination_dialog" data-options="title:'订单协调',modal:true,closed:true,width:600,height:400,buttons:'#coordination_buttons'">
    <div data-bind="with: CoordinationForm">
        <table class="m_coor">
            <tr>
                <td style="text-align:right">订单号：&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td data-bind="text: orderid"></td>
                <td style="text-align:right">PNR：&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td data-bind="text: pnr"></td>
            </tr>
            <tr>
                <td style="text-align:right">类型：&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <select data-bind="value: Type">
                        <option value="出票">出票</option>
                        <option value="催单">催单</option>
                        <option value="其它">其它</option>
                    </select>
                </td>
                <td style="text-align:right">处理状态：&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <input type="radio" name="status" id="completed" value="true" data-bind="checked: IsCompleted" /><label for="completed">完成</label>
                    <input type="radio" name="status" id="noCompleted" value="false" data-bind="checked: IsCompleted" /><label for="noCompleted">未完成</label>
                </td>
            </tr>
            <tr>
                <td colspan="4" style="width:560px;">协调内容：&nbsp;&nbsp;&nbsp;&nbsp;<br />
                    <textarea data-bind="value: Content" rows="5" cols="70" style="width:558px;"></textarea>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <table id="coordinationGrid" class="easyui-datagrid" title="协调记录" style="width:560px;">
                        <thead>
                            <tr>
                                <th data-options="field:'OperationPerson',title:'操作人',width:60"></th>
                                <th data-options="field:'AddDatetime',title:'时间',width:130"></th>
                                <th data-options="field:'Type',title:'类型',width:40"></th>
                                <th data-options="field:'Content',title:'协调内容',width:225"></th>
                            </tr>
                        </thead>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</div>
<div id="coordination_buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-sys-ok" data-bind="click: $root.CoordinationForm.SaveCoordinationClick">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-sys-cancel" onclick="$('#coordination_dialog').dialog('close');">关闭</a>
</div>
