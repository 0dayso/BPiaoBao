    					</Border>
    				</Grid>
    				<ControlTemplate.Triggers>
    					<Trigger Property="IsEnabled" Value="False">
    						<Setter Property="Foreground" Value="#FFADADAD"/>
    					</Trigger>
    				</ControlTemplate.Triggers>
    			</ControlTemplate>
    		</Setter.Value>
    	</Setter>
    	<Setter Property="Margin" Value="0,0,20,0"/>
    	<Setter Property="Height" Value="28.5"/>
    </Style>
